---
title: City Focus
---

<!--load the city.js script for this page -->
{% set extraScripts = "/js/city.js" %}

{% extends "layout.njk" %}

{% block content %}

<div class="columns is-variable is-6">

  <!-- Left Column: Summary + Hourly -->
  <div class="column is-two-thirds">
    {% include "current-summary.njk" %}
  </div>

  <!-- Right Column: 7 Day Forecast -->
  <div class="column">
    {% include "seven-day-forecast.njk" %}
  </div>

</div>

<!-- Back Button -->
<a href="/" class="button is-link mt-4">← Back to Dashboard</a>

{% endblock %}
